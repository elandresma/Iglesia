@model IEnumerable<Iglesia.Web.Data.Entities.Assistance>

@{
    ViewData["Title"] = "My Assistances";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />
<h4>My Assistances</h4>
<hr />


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">My Assistances</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Meeting.DateLocal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Meeting.Church.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsPresent)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Meeting.DateLocal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Meeting.Church.Name)
                                </td>
                                <td>
                                    @if (item.IsPresent == true)
                                    {
                                        <p>Presente</p>
                                    }
                                    else
                                    {
                                        <p>No presente</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
}
